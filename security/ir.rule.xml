<odoo>
    <data noupdate="1">
        <!-- Regla para usuarios: solo pueden ver sus propios registros -->
        <record id="rule_invoice_mail_user_own_records" model="ir.rule">
            <field name="name">Ver sus propios registros</field>
            <field name="model_id" ref="model_invoice_mail"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
        </record>
    </data>
</odoo>
